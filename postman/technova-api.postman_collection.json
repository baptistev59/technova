{
  "info": {
    "_postman_id": "d5d8c5f4-2e7f-4b5c-98c6-7d5fcb4c1aeb",
    "name": "TechNova API smoke",
    "description": "Collection Postman minimale pour valider les endpoints publics et protégés (JWT).",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Healthcheck /api/test",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/test",
          "host": ["{{baseUrl}}"],
          "path": ["api", "test"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('200 OK', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "const payload = pm.response.json();",
              "pm.test('statut ok', function () {",
              "    pm.expect(payload.status).to.eql('ok');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Auth - Login (JWT)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"email\": \"{{loginEmail}}\",\n    \"password\": \"{{loginPassword}}\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/login",
          "host": ["{{baseUrl}}"],
          "path": ["api", "login"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('200 OK', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "const loginData = pm.response.json();",
              "pm.test('token présent', function () {",
              "    pm.expect(loginData.token).to.exist;",
              "});",
              "pm.environment.set('jwtToken', loginData.token);"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Auth - /api/me",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwtToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/me",
          "host": ["{{baseUrl}}"],
          "path": ["api", "me"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('200 OK', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "const profile = pm.response.json();",
              "pm.test('email attendu', function () {",
              "    pm.expect(profile.email).to.eql(pm.environment.get('loginEmail'));",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Catalogue - Lister les produits",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwtToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/products?search={{catalogSearch}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "products"],
          "query": [
            {
              "key": "search",
              "value": "{{catalogSearch}}"
            }
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('200 OK', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "const products = pm.response.json();",
              "pm.test('au moins un produit', function () {",
              "    pm.expect(products.length).to.be.above(0);",
              "});",
              "",
              "if (products.length > 0) {",
              "    const firstProduct = products[0];",
              "    pm.environment.set('sampleProductSlug', firstProduct.slug);",
              "    pm.environment.set('cartProductId', firstProduct.id);",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Catalogue - Détail produit",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwtToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/products/{{sampleProductSlug}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "products", "{{sampleProductSlug}}"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('200 OK', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "const product = pm.response.json();",
              "pm.test('slug cohérent', function () {",
              "    pm.expect(product.slug).to.eql(pm.environment.get('sampleProductSlug'));",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Cart - Ajouter un produit",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{jwtToken}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"productId\": {{cartProductId}},\n    \"quantity\": {{cartQuantity}}\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/cart",
          "host": ["{{baseUrl}}"],
          "path": ["api", "cart"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('200 OK', function () {",
              "    pm.response.to.have.status(200);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Cart - Consulter",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwtToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/cart",
          "host": ["{{baseUrl}}"],
          "path": ["api", "cart"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('200 OK', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "const cart = pm.response.json();",
              "pm.test('totaux présents', function () {",
              "    pm.expect(cart).to.have.property('total');",
              "    pm.expect(cart).to.have.property('totalQuantity');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Cart - Retirer le produit",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwtToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/cart/{{cartProductId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "cart", "{{cartProductId}}"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('204 No Content', function () {",
              "    pm.response.to.have.status(204);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    }
  ]
}
