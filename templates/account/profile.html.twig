{% extends 'base.html.twig' %}
{% form_theme profileForm 'form/tailwind_form_theme.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block body %}
<section class="tn-main max-w-5xl mx-auto">
    <div class="rounded-[38px] bg-white p-10 shadow-[0_40px_90px_rgba(15,25,36,0.08)]">
        <div class="grid gap-10 lg:grid-cols-[minmax(0,1.7fr)_1fr]">
            <div>
                <p class="text-xs font-semibold tracking-[0.35em] text-slate-400 uppercase mb-2">Technova</p>
                <h1 class="text-3xl font-bold mb-2">Compl√©ter mon profil</h1>
                <p class="text-slate-500 mb-6">
                    Nous utilisons ces informations pour pr√©parer tes commandes et s√©curiser ton espace.
                </p>

                {% for message in app.flashes('success') %}
                    <div class="mb-5 rounded-2xl border border-green-200 bg-green-50 px-4 py-3 text-green-800">
                        {{ message }}
                    </div>
                {% endfor %}

                {{ form_start(profileForm, {attr: {class: 'space-y-8'}}) }}

                <div class="rounded-3xl border border-slate-100 bg-slate-50/80 p-6 space-y-4">
                    <div class="flex items-center justify-between mb-4">
                        <h2 class="text-lg font-semibold text-slate-800">Informations personnelles</h2>
                        <span class="text-xs text-slate-400">Obligatoires pour la livraison s√©curis√©e</span>
                    </div>
                    <div class="grid gap-4 md:grid-cols-2">
                        {{ form_row(profileForm.firstname) }}
                        {{ form_row(profileForm.lastname) }}
                    </div>
                    <div class="grid gap-6 md:grid-cols-[auto,1fr] items-center">
                        <div class="flex items-center justify-center">
                            {% set avatarUrl = null %}
                            {% if viewer is defined and viewer and viewer.avatarPath %}
                                {% set avatarUrl = viewer.avatarPath starts with 'http' ? viewer.avatarPath : asset(viewer.avatarPath) %}
                            {% endif %}
                            <div class="h-20 w-20 rounded-full bg-white border border-slate-200 shadow-inner overflow-hidden flex items-center justify-center" data-avatar-preview>
                                {% if avatarUrl %}
                                    <img src="{{ avatarUrl }}" alt="Avatar actuel" class="h-full w-full object-cover">
                                {% else %}
                                    <span class="text-slate-400 text-lg font-semibold">Avatar</span>
                                {% endif %}
                            </div>
                        </div>
                        <div>
                            {{ form_row(profileForm.avatarFile) }}
                            <p class="text-xs text-slate-500 mt-1">Format PNG ou JPG - 2 Mo max.</p>
                        </div>
                    </div>
                    <div class="grid gap-4 md:grid-cols-2">
                        {{ form_row(profileForm.phone) }}
                        <div class="rounded-2xl border border-slate-200 bg-white p-4">
                            <label class="flex items-center gap-3 text-sm text-slate-700">
                                {{ form_widget(profileForm.newsletterOptIn) }}
                                <span>Recevoir les nouveaut√©s TechNova</span>
                            </label>
                            {{ form_errors(profileForm.newsletterOptIn) }}
                        </div>
                    </div>
                </div>

                <div class="rounded-3xl border border-slate-100 bg-slate-50/80 p-6">
                    <div class="flex items-center justify-between mb-4">
                        <h2 class="text-lg font-semibold text-slate-800">Adresse principale</h2>
                        <span class="text-xs text-slate-400">Pr√©remplie pour tes futures commandes</span>
                    </div>
                    {% if profileForm.primaryAddress is defined %}
                        {% set addressForm = profileForm.primaryAddress %}
                        <div class="space-y-5">
                            <div class="grid gap-4 md:grid-cols-2">
                                {{ form_row(addressForm.country, {'row_attr': {'class': 'md:col-span-1'}}) }}
                                {{ form_row(addressForm.label, {'row_attr': {'class': 'md:col-span-1'}}) }}
                            </div>
                            <div class="grid gap-4">
                                {{ form_row(addressForm.addressLine1) }}
                                {{ form_row(addressForm.addressLine2) }}
                            </div>
                            <div class="grid gap-4 md:grid-cols-2">
                                {{ form_row(addressForm.postalCode) }}
                                {{ form_row(addressForm.city) }}
                            </div>
                            <div class="grid gap-4 md:grid-cols-2">
                                {{ form_row(addressForm.state) }}
                            </div>
                            <div class="rounded-2xl border border-slate-200 bg-white p-4 flex flex-wrap gap-6 text-sm text-slate-700">
                                <label class="flex items-center gap-3 min-w-[180px]">
                                    {{ form_widget(addressForm.isDefault) }}
                                    <span>Adresse principale</span>
                                </label>
                                <label class="flex items-center gap-3 min-w-[180px]">
                                    {{ form_widget(addressForm.isShipping) }}
                                    <span>Pour la livraison</span>
                                </label>
                                <label class="flex items-center gap-3 min-w-[180px]">
                                    {{ form_widget(addressForm.isBilling) }}
                                    <span>Pour la facturation</span>
                                </label>
                            </div>
                        </div>
                    {% endif %}
                </div>

                <div class="flex justify-end">
                    <button type="submit" class="btn btn-primary px-10">
                        Mettre √† jour mon profil
                    </button>
                </div>

                {{ form_end(profileForm) }}
            </div>

            <aside class="rounded-3xl bg-sky-50/80 p-6 shadow-[0_35px_80px_rgba(51,132,255,0.18)] flex flex-col justify-between">
                <div>
                    <h3 class="text-lg font-semibold mb-4">Rappels importants</h3>
                    <ul class="space-y-4 text-sm text-slate-600">
                        <li class="flex gap-3">
                            <span class="text-xl leading-none">üìç</span>
                            Une adresse compl√®te acc√©l√®re les livraisons et facilite les points relais.
                        </li>
                        <li class="flex gap-3">
                            <span class="text-xl leading-none">üîê</span>
                            Les coordonn√©es restent priv√©es et servent uniquement aux transporteurs.
                        </li>
                        <li class="flex gap-3">
                            <span class="text-xl leading-none">‚ú®</span>
                            Les communications TechNova sont personnalis√©es selon tes pr√©f√©rences.
                        </li>
                    </ul>
                </div>
                <p class="mt-6 text-xs text-slate-500">
                    Tu pourras bient√¥t ajouter plusieurs adresses (domicile, bureau, point relais) dans cette m√™me section.
                </p>
            </aside>
        </div>
    </div>
</section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const fileInput = document.querySelector('input[type="file"][name$="[avatarFile]"]');
            const preview = document.querySelector('[data-avatar-preview]');

            if (!fileInput || !preview) {
                return;
            }

            fileInput.addEventListener('change', () => {
                const [file] = fileInput.files ?? [];
                if (!file) {
                    return;
                }

                const reader = new FileReader();
                reader.onload = event => {
                    preview.innerHTML = '<img src="' + event.target.result + '" alt="Nouvel avatar" class="h-full w-full object-cover">';
                };
                reader.readAsDataURL(file);
            });
        });
    </script>
{% endblock %}
