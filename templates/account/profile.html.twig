                            {% endif %}
                            <div class="relative h-20 w-20 rounded-full bg-white border border-slate-200 shadow-inner overflow-hidden transition hover:shadow-md" data-avatar-preview>
                                {% if avatarUrl %}
                                    <img src="{{ avatarUrl }}" alt="Avatar actuel" class="absolute inset-0 h-full w-full object-cover object-center">
                                {% else %}
                                    <span class="text-slate-400 text-lg font-semibold">Avatar</span>
                                {% endif %}
                                <div class="pointer-events-none absolute inset-0 bg-slate-900/40 text-white text-xs font-semibold uppercase tracking-wide flex items-center justify-center opacity-0 transition group-hover:opacity-100">Changer</div>
                            </div>
                        </button>
                        <div>
                            {{ form_widget(profileForm.avatarFile, {'attr': {'class': 'sr-only', 'data-avatar-input': 'true'}}) }}
                            <p class="text-xs text-slate-500 mt-1">Clique sur l‚Äôavatar pour choisir un nouveau fichier (PNG/JPG, 2 Mo max).</p>
                            {{ form_errors(profileForm.avatarFile) }}
                        </div>
                    </div>
                    <div class="grid gap-4 md:grid-cols-2">
                        {{ form_row(profileForm.phone) }}
                        <div class="rounded-2xl border border-slate-200 bg-white p-4">
                            <label class="flex items-center gap-3 text-sm text-slate-700">
                                {{ form_widget(profileForm.newsletterOptIn) }}
                                <span>Recevoir les nouveaut√©s TechNova</span>
                            </label>
                            {{ form_errors(profileForm.newsletterOptIn) }}
                        </div>
                    </div>
                </div>

                <div class="rounded-3xl border border-slate-100 bg-slate-50/80 p-6">
                    <div class="flex items-center justify-between mb-4">
                        <h2 class="text-lg font-semibold text-slate-800">Adresse principale</h2>
                        <span class="text-xs text-slate-400">Pr√©remplie pour tes futures commandes</span>
                    </div>
                    {% if profileForm.primaryAddress is defined %}
                        {% set addressForm = profileForm.primaryAddress %}
                        <div class="space-y-5">
                            <div class="grid gap-4 md:grid-cols-2">
                                {{ form_row(addressForm.country, {'row_attr': {'class': 'md:col-span-1'}}) }}
                                {{ form_row(addressForm.label, {'row_attr': {'class': 'md:col-span-1'}}) }}
                            </div>
                            <div class="grid gap-4">
                                {{ form_row(addressForm.addressLine1) }}
                                {{ form_row(addressForm.addressLine2) }}
                            </div>
                            <div class="grid gap-4 md:grid-cols-2">
                                {{ form_row(addressForm.postalCode) }}
                                {{ form_row(addressForm.city) }}
                            </div>
                            <div class="grid gap-4 md:grid-cols-2">
                                {{ form_row(addressForm.state) }}
                            </div>
                            <div class="rounded-2xl border border-slate-200 bg-white p-4 flex flex-wrap gap-6 text-sm text-slate-700">
                                <label class="flex items-center gap-3 min-w-[180px]">
                                    {{ form_widget(addressForm.isDefault) }}
                                    <span>Adresse principale</span>
                                </label>
                                <label class="flex items-center gap-3 min-w-[180px]">
                                    {{ form_widget(addressForm.isShipping) }}
                                    <span>Pour la livraison</span>
                                </label>
                                <label class="flex items-center gap-3 min-w-[180px]">
                                    {{ form_widget(addressForm.isBilling) }}
                                    <span>Pour la facturation</span>
                                </label>
                            </div>
                        </div>
                    {% endif %}
                </div>

                <div class="flex justify-end">
                    <button type="submit" class="btn btn-primary px-10">
                        Mettre √† jour mon profil
                    </button>
                </div>

                {{ form_end(profileForm) }}

                <div class="mt-10 rounded-3xl border border-red-100 bg-red-50/80 p-6">
                    <h2 class="text-lg font-semibold text-red-900">Supprimer mon compte</h2>
                    <p class="text-sm text-red-800 mt-2">Cette action supprime d√©finitivement ton compte.</p>
                    <form class="mt-4 flex justify-end" method="post" action="{{ path('app_profile_delete') }}" onsubmit="return confirm('Confirmer la suppression de ton compte ? Cette action est irr√©versible.');">
                        <input type="hidden" name="_token" value="{{ csrf_token('profile_delete') }}">
                        <button type="submit" class="btn btn-outline text-red-700 border-red-200 hover:bg-red-600 hover:text-white">Supprimer mon compte</button>
                    </form>
                </div>
            </div>

            <aside class="rounded-3xl bg-sky-50/80 p-6 shadow-[0_35px_80px_rgba(51,132,255,0.18)] flex flex-col justify-between">
                <div>
                    <h3 class="text-lg font-semibold mb-4">Rappels importants</h3>
                    <ul class="space-y-4 text-sm text-slate-600">
                        <li class="flex gap-3">
                            <span class="text-xl leading-none">üìç</span>
                            Une adresse compl√®te acc√©l√®re les livraisons et facilite les points relais.
                        </li>
                        <li class="flex gap-3">
                            <span class="text-xl leading-none">üîê</span>
                            Les coordonn√©es restent priv√©es et servent uniquement aux transporteurs.
                        </li>
                        <li class="flex gap-3">
                            <span class="text-xl leading-none">‚ú®</span>
                            Les communications TechNova sont personnalis√©es selon tes pr√©f√©rences.
                        </li>
                    </ul>
                </div>
                <p class="mt-6 text-xs text-slate-500">
                    Tu pourras bient√¥t ajouter plusieurs adresses (domicile, bureau, point relais) dans cette m√™me section.
                </p>
            </aside>
        </div>
    </div>
</section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const fileInput = document.querySelector('[data-avatar-input]');
            const preview = document.querySelector('[data-avatar-preview]');
            const trigger = document.querySelector('[data-avatar-trigger]');

            if (!fileInput || !preview || !trigger) {
                return;
            }

            const previewImage = dataUrl => {
                preview.innerHTML = '<img src="' + dataUrl + '" alt="Nouvel avatar" class="absolute inset-0 h-full w-full object-cover object-center">';
                const overlay = document.createElement('div');
                overlay.className = 'pointer-events-none absolute inset-0 bg-slate-900/40 text-white text-xs font-semibold uppercase tracking-wide flex items-center justify-center opacity-0 transition group-hover:opacity-100';
                overlay.textContent = 'Changer';
                preview.appendChild(overlay);
            };

            trigger.addEventListener('click', () => fileInput.click());
            trigger.addEventListener('keydown', event => {
                if (event.key === 'Enter' || event.key === ' ') {
                    event.preventDefault();
                    fileInput.click();
                }
            });

            fileInput.addEventListener('change', () => {
                const [file] = fileInput.files ?? [];
                if (!file) {
                    return;
                }
                const reader = new FileReader();
                reader.onload = event => previewImage(event.target.result);
                reader.readAsDataURL(file);
            });
        });
    </script>
{% endblock %}
