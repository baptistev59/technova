                    </div>
                    <div class="grid gap-4 md:grid-cols-2">
                        {{ form_row(profileForm.firstname) }}
                        {{ form_row(profileForm.lastname) }}
                    </div>
                    <div class="grid gap-6 md:grid-cols-[auto,1fr] items-center">
                        <button type="button" class="group flex items-center justify-center cursor-pointer focus:outline-none" data-avatar-trigger aria-label="Choisir un nouvel avatar">
                            {% set avatarUrl = null %}
                            {% if viewer is defined and viewer and viewer.avatarPath %}
