{% extends 'base.html.twig' %}

{% block title 'Commande confirmée — TechNova' %}

{% block body %}
    <section class="tn-section">
        <div class="rounded-2xl border border-green-200 bg-green-50 p-8 text-center">
            <h1 class="text-2xl font-semibold text-green-900">Merci pour votre commande !</h1>
            <p class="mt-2 text-green-800">Référence : <strong>{{ order.reference }}</strong></p>
            <p class="mt-4 text-green-800">Vous recevrez bientôt un e-mail de confirmation. Vous pouvez suivre vos commandes depuis votre profil.</p>
        </div>

        <div class="mt-8 grid gap-6 lg:grid-cols-2">
            <div class="rounded-2xl border border-slate-200 bg-white p-6">
                <h2 class="text-lg font-semibold text-slate-900">Récapitulatif</h2>
                <ul class="mt-4 space-y-3">
                    {% for item in order.items %}
                        <li class="flex justify-between text-sm text-slate-600">
                            <span>{{ item.productName }} × {{ item.quantity }}</span>
                            <span>{{ item.lineTotal|number_format(2, ',', ' ') }} €</span>
                        </li>
                    {% endfor %}
                </ul>
                <div class="mt-4 flex justify-between text-xl font-semibold text-slate-900 border-t border-slate-100 pt-4">
                    <span>Total</span>
                    <span>{{ order.totalAmount|number_format(2, ',', ' ') }} €</span>
                </div>
            </div>

            <div class="rounded-2xl border border-slate-200 bg-white p-6">
                <h2 class="text-lg font-semibold text-slate-900">Livraison</h2>
                {% set address = order.shippingAddress %}
                <p class="mt-2 text-sm text-slate-600">
                    {{ address.addressLine1 }}<br>
                    {% if address.addressLine2 %}{{ address.addressLine2 }}<br>{% endif %}
                    {{ address.postalCode }} {{ address.city }}<br>
                    {{ address.country }}
                </p>
                <div class="mt-4 flex gap-3">
                    <a class="btn btn-primary" href="{{ path('catalog_index') }}">Continuer mes achats</a>
                    <a class="btn btn-outline" href="{{ path('app_cart_show') }}">Voir mon panier</a>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
