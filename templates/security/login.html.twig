{% extends 'base.html.twig' %}

{% block title %}Connexion | TechNova{% endblock %}

{% form_theme loginForm 'form/tailwind_form_theme.html.twig' %}

{% block body %}
<section class="mx-auto grid max-w-5xl gap-8 rounded-[32px] bg-white p-10 shadow-2xl md:grid-cols-2">
    <div class="space-y-6">
        <div>
            <p class="text-sm font-semibold uppercase tracking-widest text-blue-400">TechNova</p>
            <h1 class="mt-2 text-3xl font-bold text-slate-900">Heureux de te revoir !</h1>
            <p class="mt-3 text-slate-500">
                Accède à tes paniers, commandes et recommandations personnalisées en te connectant.
            </p>
        </div>

        {% if authError %}
            <div class="rounded-2xl border border-red-200 bg-red-50 px-4 py-3 text-sm text-red-700">
                {{ authError }}
            </div>
        {% endif %}

        {{ form_start(loginForm, { attr: { class: 'space-y-6' } }) }}
            <div class="grid gap-4">
                {{ form_row(loginForm.email) }}
                {{ form_row(loginForm.password) }}
            </div>
            <button class="mt-4 inline-flex w-full items-center justify-center rounded-2xl bg-blue-600 px-5 py-3 text-lg font-semibold text-white shadow-lg shadow-blue-400/40 transition hover:-translate-y-0.5 hover:bg-blue-500 md:w-auto">
                Se connecter
            </button>
        {{ form_end(loginForm) }}
        <p class="text-sm text-slate-500">Besoin d’un compte ? <a class="text-blue-600 hover:underline" href="{{ path('app_register') }}">Inscris-toi ici</a>.</p>
    </div>

    <div class="flex flex-col justify-center rounded-[28px] bg-gradient-to-br from-blue-50 to-indigo-100 p-8 text-center shadow-inner">
        <h2 class="text-2xl font-bold text-slate-900">Nouveau sur TechNova ?</h2>
        <p class="mt-2 text-slate-600">Profite de recommandations exclusives et d’un suivi simplifié.</p>
        <a class="mt-6 inline-flex items-center justify-center rounded-2xl border-2 border-blue-500 px-5 py-2 font-semibold text-blue-600 transition hover:bg-blue-500 hover:text-white" href="{{ path('app_register') }}">
            Créer un compte
        </a>
        <div class="mt-8 text-left text-sm text-slate-500">
            <p><strong>Astuce :</strong> complète ensuite ton profil pour enregistrer tes adresses et faciliter les prochaines commandes.</p>
        </div>
    </div>
</section>
{% endblock %}

