{% extends 'base.html.twig' %}

{% block title %}Inscription | TechNova{% endblock %}

{% form_theme registrationForm 'form/tailwind_form_theme.html.twig' %}

{% block body %}

<section class="mx-auto grid max-w-5xl gap-8 rounded-[32px] bg-white p-10 shadow-2xl md:grid-cols-2">
    <div class="space-y-6">
        <div>
            <p class="text-sm font-semibold uppercase tracking-widest text-blue-400">TechNova</p>
            <h1 class="mt-2 text-3xl font-bold text-slate-900">Créer mon compte</h1>
            <p class="mt-3 text-slate-500">
                Rejoignez la communauté TechNova pour gérer vos paniers, suivre vos commandes
                et profiter des nouveautés en avant-première.
            </p>
        </div>

        {% if apiError %}
            <div class="rounded-2xl border border-red-200 bg-red-50 px-4 py-3 text-sm text-red-700">
                {{ apiError }}
            </div>
        {% endif %}

        {{ form_start(registrationForm, { attr: { class: 'space-y-6' } }) }}
            <div class="grid gap-4 md:grid-cols-2">
                {{ form_row(registrationForm.firstname) }}
                {{ form_row(registrationForm.lastname) }}
            </div>
            <div class="grid gap-4">
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.password) }}
            </div>
            <button class="mt-4 inline-flex w-full items-center justify-center rounded-2xl bg-blue-600 px-5 py-3 text-lg font-semibold text-white shadow-lg shadow-blue-400/40 transition hover:-translate-y-0.5 hover:bg-blue-500 md:w-auto">
                Créer mon compte
            </button>
        {{ form_end(registrationForm) }}
        <p class="text-sm text-slate-500">En créant un compte, vous acceptez les CGU de TechNova.</p>
    </div>
    <div class="flex flex-col justify-center rounded-[28px] bg-gradient-to-br from-blue-50 to-indigo-100 p-8 text-center shadow-inner">
        <h2 class="text-2xl font-bold text-slate-900">Déjà membre ?</h2>
        <p class="mt-2 text-slate-600">Connectez-vous pour retrouver vos paniers et vos commandes.</p>
        <a class="mt-6 inline-flex items-center justify-center rounded-2xl border-2 border-blue-500 px-5 py-2 font-semibold text-blue-600 transition hover:bg-blue-500 hover:text-white" href="{{ path('app_login') }}">
            Se connecter
        </a>
        <div class="mt-8 text-left text-sm text-slate-500">
            <p><strong>Astuce :</strong> après validation de l’inscription, nous vous guiderons vers votre profil pour compléter vos informations.</p>
        </div>
    </div>
</section>
{% endblock %}
