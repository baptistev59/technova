{% extends 'base.html.twig' %}

{% block title 'Mon panier — TechNova' %}

{% block body %}
    <section class="tn-section">
        <div class="tn-section__header">
            <h1>Votre panier</h1>
            <p class="text-slate-600">Retrouvez les produits ajoutés depuis la boutique TechNova.</p>
        </div>

        {% if cart.items is empty %}
            <div class="rounded-2xl border border-slate-200 bg-white p-8 text-center">
                <p class="text-lg font-medium text-slate-700">Votre panier est vide.</p>
                <p class="mt-2 text-slate-500">Parcourez le <a class="text-blue-600 underline" href="{{ path('catalog_index') }}">catalogue</a> pour ajouter vos coups de cœur.</p>
            </div>
        {% else %}
            <div class="overflow-hidden rounded-2xl border border-slate-200 bg-white">
                <div class="grid grid-cols-1 divide-y divide-slate-100">
                    {% for item in cart.items %}
                        {% set product = item.product %}
                        {% set mainImage = product.images|first %}
                        <div class="flex flex-col gap-4 p-6 md:flex-row md:items-center" data-cart-line data-product-id="{{ product.id }}">
                            <div class="flex items-center gap-4 flex-1">
                                <div class="h-20 w-20 rounded-2xl bg-slate-50 overflow-hidden">
                                    {% if mainImage %}
                                        <img src="{{ mainImage.url }}" alt="{{ product.name }}" class="h-full w-full object-cover">
                                    {% else %}
                                        <img src="{{ asset('assets/images/product-placeholder.svg') }}" alt="Visuel par défaut" class="h-full w-full object-cover">
                                    {% endif %}
                                </div>
                                <div>
                                    <h3 class="text-lg font-semibold text-slate-900">{{ product.name }}</h3>
                                    <p class="text-sm text-slate-500">Prix unitaire : {{ product.price|number_format(2, ',', ' ') }} €</p>
                                </div>
                            </div>
                            <div class="flex flex-col gap-2 md:items-end">
                                <form class="mt-3 flex items-center gap-2 cart-update-form" method="post" action="{{ path('app_cart_update', {id: product.id}) }}">
                                    <label class="text-sm text-slate-600" for="quantity-{{ product.id }}">Quantité</label>
                                    <input
                                        class="tn-input cart-quantity-input"
                                        id="quantity-{{ product.id }}"
                                        name="quantity"
                                        type="number"
                                        min="1"
                                        max="{{ item.stock }}"
                                        value="{{ item.quantity }}"
                                        data-stock="{{ item.stock }}"
                                    >
                                    <input type="hidden" name="_token" value="{{ csrf_token('update_cart_' ~ product.id) }}">
                                </form>
                            </div>
                                <p class="text-xl font-semibold text-slate-900" data-line-total>{{ item.lineTotal|number_format(2, ',', ' ') }} €</p>
                                <form method="post" action="{{ path('app_cart_remove', {id: product.id}) }}">
                                    <input type="hidden" name="_token" value="{{ csrf_token('remove_from_cart_' ~ product.id) }}">
                                    <button class="btn btn-outline text-sm" type="submit">Retirer</button>
                                </form>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>

            <div class="mt-6 flex flex-col items-end gap-4 rounded-2xl border border-slate-200 bg-white p-6">
                <div class="text-right">
                    <p class="text-sm text-slate-500">Total articles : <span data-cart-total-qty>{{ cart.totalQuantity }}</span></p>
                    <p class="text-2xl font-semibold text-slate-900">Total : <span data-cart-total>{{ cart.total|number_format(2, ',', ' ') }} €</span></p>
                </div>
                <div class="flex flex-wrap gap-3">
                    <a class="btn btn-outline" href="{{ path('catalog_index') }}">Continuer mes achats</a>
                    <form method="post" action="{{ path('app_cart_clear') }}">
                        <input type="hidden" name="_token" value="{{ csrf_token('cart_clear') }}">
                        <button class="btn btn-outline" type="submit">Vider le panier</button>
                    </form>
                    <a class="btn btn-primary" href="{{ path('app_checkout_index') }}">Passer la commande</a>
                </div>
            </div>
        {% endif %}
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            document.querySelectorAll('.cart-update-form').forEach(form => {
                const input = form.querySelector('.cart-quantity-input');
                input.addEventListener('input', () => {
                    const stock = parseInt(input.dataset.stock ?? '1', 10) || 1;
                    let value = parseInt(input.value, 10);
                    if (Number.isNaN(value) || value < 1) {
                        value = 1;
                    }
                    if (value > stock) {
                        value = stock;
                    }
                    input.value = value;
                    submitUpdate(form);
                });
            });

            async function submitUpdate(form) {
                const response = await fetch(form.action, {
                    method: 'POST',
                    headers: {'X-Requested-With': 'XMLHttpRequest'},
                    body: new FormData(form)
                });
                if (!response.ok) {
                    return;
                }
                const data = await response.json();
                if (data.line) {
                    const line = document.querySelector(`[data-product-id="${data.line.productId}"] [data-line-total]`);
                    if (line) {
                        line.textContent = new Intl.NumberFormat('fr-FR', { style: 'currency', currency: 'EUR' }).format(data.line.lineTotal);
                    }
                }
                if (data.summary) {
                    const totalEl = document.querySelector('[data-cart-total]');
                    const qtyEl = document.querySelector('[data-cart-total-qty]');
                    if (totalEl) {
                        totalEl.textContent = new Intl.NumberFormat('fr-FR', { style: 'currency', currency: 'EUR' }).format(data.summary.total);
                    }
                    if (qtyEl) {
                        qtyEl.textContent = data.summary.totalQuantity;
                    }
                }
            }
        });
    </script>
{% endblock %}
